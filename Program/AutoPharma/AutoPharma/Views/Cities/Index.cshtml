@model IEnumerable<AutoPharma.Models.City>

@{
    ViewData["Title"] = "Index";
}
<div class="container my-3 bg-light">
        <div class="col-md-12 text-center">
<h1>The City </h1>

 
   <button type="button" class="btn btn-primary">
 <a style="color:black" asp-action="Create">Create New</a>
 </button>
   </div>
   </div>
<div class="row">
@foreach (var item in Model) {
     
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"> @Html.DisplayFor(modelItem => item.Name)</h5>
       
       <button type="button" class="btn btn-success"><a style="color:black" asp-action="Edit" asp-route-id="@item.Id">Edit</a> </button>|
             <button type="button" class="btn btn-info">   <a style="color:black" asp-action="Details" asp-route-id="@item.Id">Details</a></button> |
              <button type="button" class="btn btn-danger">  <a  style="color:black" asp-action="Delete" asp-route-id="@item.Id">Delete</a></button>
      </div>
    </div>
  </div>


}
</div>


