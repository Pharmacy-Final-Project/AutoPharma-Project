                <tr>
                    <th>
                        Medicine Name:
                    </th>
                    <th>
                        Count:
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.BranchMedicines)
            {
                <tr>
                    <td>
                    @Html.DisplayFor(x => item.Medicine.Name)
                    </td>
                    <td>
