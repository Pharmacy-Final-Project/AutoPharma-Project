@model IEnumerable<AutoPharma.Models.Branch>



@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
      <link rel="stylesheet" href="~/css/card.css">
            <link rel="stylesheet" href="~/css/card.scss">

      <script src="~/js/card.js"></script>


<title>Branches</title>
</head>
<body>

    <div class="container my-3 bg-light">
        <div class="col-md-12 text-center">
<h1>The Branches </h1>

 
   <button type="button" class="btn btn-primary">
  <a asp-action="Create" style="color:black">Create New</a>
 </button>
   </div>
   </div>




        <div class="row">
@foreach (var item in Model) {
        

  <div class="col-sm-6">
 <figure class="snip1218">
  
 
  <figcaption>
    <h3> @Html.DisplayFor(modelItem => item.Address)</h3>
    
    <p>
     Phone Numbers: @Html.DisplayFor(modelItem => item.Phone)"
    </p>
               <button class="btn btn-outline-success mx-1 " type="submit"><a asp-action="Edit" asp-route-id="@item.Id">Edit</a></button>
               <button class="btn btn-outline-secondary mx-1" type="submit"><a asp-action="Details" asp-route-id="@item.Id">Details</a></button>
                <button class="btn btn-outline-warning mx-1" type="submit"><a asp-action="Delete" asp-route-id="@item.Id">Delete</a></button>
                 </figcaption>


</figure>
  </div>


      
}
</div>





</body>
</html>




