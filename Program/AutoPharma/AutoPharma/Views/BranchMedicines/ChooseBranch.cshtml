@model AutoPharma.Models.BranchMedicine

@{
    ViewData["Title"] = "Choose a Branch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Choose a Branch</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="BranchMedicines" asp-action="ChooseBranch">
           
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BranchId" class="control-label"> Branch Address</label>
                <select asp-for="BranchId" class ="form-control" asp-items="ViewBag.BranchId"></select>

            </div>   

           <td>
                <a asp-action="ChooseBranch" asp-route-id="BranchId">Next</a> 
              
            </td>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
