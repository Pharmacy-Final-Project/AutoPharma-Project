@model AutoPharma.Models.BranchMedicine

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
                <div class="row justify-content-center">

<div class="btn-group p-3" role="group" aria-label="Basic example">
<h1>Create A New BranchMedicine</h1>


</div>
</div>
<hr />
<div class="row justify-content-center p-10" style=" background-color:#85929E	" >
        <div class="card" style="width: 30rem; background-color:#BFC9CA	">

        <form asp-action="Create">
          <div class="form-group p-3">
                <label asp-for="MedicineId" class="control-label"></label>
                <select asp-for="MedicineId" class ="form-control" asp-items="ViewBag.MedicineId"></select>
            </div>
            <div class="form-group p-3">
                <label asp-for="BranchId" class="control-label"></label>
                <select asp-for="BranchId" class ="form-control" asp-items="ViewBag.BranchId"></select>
            </div>
            <div class="form-group p-3">
                <label asp-for="LocationId" class="control-label"></label>
                <select asp-for="LocationId" class ="form-control" asp-items="ViewBag.LocationId"></select>
            </div>
            <div class="form-group p-3">
                <label asp-for="Count" class="control-label"></label>
                <input asp-for="Count" class="form-control" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="form-group p-3">
                <label asp-for="OurPrice" class="control-label"></label>
                <input asp-for="OurPrice" class="form-control" />
                <span asp-validation-for="OurPrice" class="text-danger"></span>
            </div>
         
                <div class="row justify-content-center">

<div class="btn-group p-3" role="group" aria-label="Basic example">
                <input type="submit" value="Create" class="btn btn-primary" />
                <button type="button" class="btn btn-success"><a style="color:black" asp-action="Index">Back to List</a></button>
                 </div>
                 </div>
        </form>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


 